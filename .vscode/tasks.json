{
    "version": "2.0.0",
    "tasks": [
        // compile your SPM project
        {
            "label": "Build All Swift Files",
            "type": "shell",
            "command": "swiftc",
             "args": [
        "c",
        "**/*.swift"  // This wildcard pattern will match all .swift files in subdirectories
      ], "group": {
        "kind": "build",
        "isDefault": true
      }
        },
        // compile your SPM tests
        {
            "label": "swift-build-tests",
            "type": "process",
            "command": "swift",
            "group": "build",
            "args": [
                "build",
                "--build-tests"
            ]
        }
    ]
}